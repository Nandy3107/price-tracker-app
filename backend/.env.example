# Environment Configuration for Enhanced Price Tracker

# Backend Configuration
PORT=3001
NODE_ENV=development

# ðŸ¤– AI Provider API Keys Configuration - REAL INTEGRATIONS
# Add your real API keys here to enable each AI provider

# Google Gemini AI Configuration (Primary AI)
GEMINI_API_KEY=your_google_gemini_api_key_here
# Get your free API key from: https://makersuite.google.com/app/apikey

# Anthropic Claude AI Configuration (Advanced Reasoning)
CLAUDE_API_KEY=your_claude_api_key_here
# Get API key from: https://console.anthropic.com/

# Perplexity AI Configuration (Real-time Search)
PERPLEXITY_API_KEY=your_perplexity_api_key_here
# Get API key from: https://www.perplexity.ai/settings/api

# OpenAI Configuration (ChatGPT)
OPENAI_API_KEY=your_openai_api_key_here
# Get API key from: https://platform.openai.com/api-keys

# Real-time Price Monitoring
MONITORING_INTERVAL=30000
MAX_CONCURRENT_REQUESTS=5
ENABLE_REAL_TIME_MONITORING=true

# Database Configuration (Optional - using file storage by default)
# MONGODB_URI=mongodb://localhost:27017/price-tracker

# Notification Configuration
WHATSAPP_ENABLED=false
EMAIL_ENABLED=false

# Payment Gateway Configuration
UPI_MERCHANT_ID=your_merchant_upi_id@paytm
MERCHANT_NAME=PriceTracker Pro

# Store Integration Configuration
AMAZON_AFFILIATE_TAG=your_amazon_tag
FLIPKART_AFFILIATE_ID=your_flipkart_id

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_here

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=15

# CORS Configuration
FRONTEND_URL=http://localhost:3000
